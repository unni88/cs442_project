<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/ba"
        android:id="@+id/abc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Name"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Price"
            android:layoutDirection="rtl"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="right"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/des_head"
            android:textStyle="bold"
            style="?android:attr/textAppearanceLarge"
            android:text="DESCRIPTION"
            />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="140dp"  android:textIsSelectable="true"
            tools:context=".ItemDetailFragment"
            android:textColor="#ff000000"/>


        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/imageView"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ing_head"
            android:textStyle="bold"
            style="?android:attr/textAppearanceLarge"
            android:text="INGRIDIENTS"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ing" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ins_head"
            android:textStyle="bold"
            style="?android:attr/textAppearanceLarge"
            android:text="INSTRUCION"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ins" />

    </LinearLayout>
</ScrollView>